%h1
  Edit

= error_messages_for :site

= form_for(@site, :action => url(:site, @site)) do
  %fieldset
    %legend Edit Site Info
    %p= text_field :name, :label => 'Name'
    %p= text_field :lid, :label => 'LID'
    %p= text_area :description, :label => 'Description'
    %p= text_area :directions, :label => 'Directions'
    %p= text_field :latitude, :label => 'Latitude'
    %p= text_field :longitude, :label =>'Longitude'
    %p= text_field(:name, :label => 'Name')
    %p= submit "Edit"

= link_to 'Show', url(:site, @site)
|
= link_to 'Back', url(:sites)